#VRML V1.0 ascii
# Overall height of the tree is 7m, width is 6m

DEF christmas_tree Separator {
	Transform { translation 0 2.1 0 }
	Material { diffuseColor 0 0.8 0 ambientColor 0 0.01 0 }
	Transform { translation 0 4 0 }
	Cone {  parts ALL
		bottomRadius 1
		height 2 }
	Transform { translation 0 -1.5 0 }
	Cone {  parts ALL
		bottomRadius 2
		height 3 }
	Transform { translation 0 -1.7 0 }
	Cone {  parts ALL
		bottomRadius 3
		height 4 }
	Transform { translation 0 -2.5 0 }
	Material { diffuseColor 1 0.5 0 ambientColor 0.01 0.05 0 }
	Cylinder { parts ALL
		   radius 0.15
		   height 1 }
}
