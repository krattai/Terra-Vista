#VRML V2.0 utf8
#This is the Login Post for Electric Minds

# post
Transform {
 translation 4.5 1 10
 children [
  Shape {
   appearance Appearance {
    material Material { diffuseColor 0.6 0.6 0.0 }
   }
   geometry Cylinder { radius 0.2 height 3 }
  }
  Transform {
   translation 2.0 2.0 0.0
   children [
    Shape {
     appearance Appearance {
      material Material { diffuseColor 0.9 0.9 0.0 ambientIntensity 0.4 }
     }
     geometry Text {
      string [ "Click ball to log in" ]
     }
    }
   ]
  }

  
  # bell
  Transform {
   translation 0.0 2.0 0.0
   children [
    Anchor {
     children [
      Shape {
       appearance Appearance {
        material Material { diffuseColor 0.9 0.0 0.0 }
       }
       geometry Sphere { radius 2.0 }
      }
     ]
     description "eMinds Login"
     url "http://www.minds.com/cgi-bin/maslink.cgi/command?login"
     parameter [ "target=Wander" ]
    }
   ]
  }
 ]
}